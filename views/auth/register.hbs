<div class="container">
<div class="row justify-content-center">
    <div class="col cl-sm-3">
        <form action="/register" method="post">
            <div class="input-group mb-1">
                <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
                <input type="text" name="name" class="form-control  {{#if errors.name}} is-invalid{{/if}}"  placeholder="Username"  value="{{user.name}}"  aria-label="Username" >
                {{#if errors.name}}<div class="invalid-feedback">{{ errors.name }}</div>{{/if}}

            </div>

            <div class="input-group mb-1">
                <span class="input-group-text"><i class="fa fa-envelope fa-fw"></i></span>
                <input type="email" name="email" class="form-control {{#if errors.email}} is-invalid {{/if}}" placeholder="Email" aria-label="Email" value="{{user.email}}">
                {{#if errors.email}}<div class="invalid-feedback">{{ errors.email }}</div>{{/if}}
            </div>

            <div class="input-group mb-1">
                <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
                <input type="password" name="password" class="form-control {{#if errors.password}} is-invalid {{/if}}" placeholder="Password" aria-label="Username" value="{{user.password}}">
                {{#if errors.password}}<div class="invalid-feedback">{{ errors.password }}</div>{{/if}}
            </div>

            <button type="submit">Register</button>

        </form>
    </div>
</div>
</div>