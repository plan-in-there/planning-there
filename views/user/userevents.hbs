<h1>Welcome to your events page</h1>
<h3>This are your matched plans</h3>
<hr>
<section class="card-deck">
  {{#each events as |event|}}
    <div class="card event-card">
      <h3>{{event.name}}</h3>
      <img src="{{event.image}}" alt="{{event.name}}" />
      <div class="card-body">
        <h4><i class="fa fa-calendar-day fa-fw"></i> {{dateFormatterList date=event.date}} | <i class="fas fa-map-marker-alt fa-fw"></i> {{event.city}}</h4>
        {{!-- {{dotted event.description 100 }} --}}
        <p>{{ event.description }}</p>
        <a href="/events/{{event.id}}">Detail</a>       
      </div>
    </div>
  {{/each}} 
</section>

<hr>
<h3>Proposed events</h3>
<hr>
<section class="card-deck">
  {{#each createEvents as |myevent|}}
    <div class="card event-card">
      <h3>{{myevent.name}}</h3>
      <img src="{{myevent.image}}" alt="{{myevent.name}}" />
      <div class="card-body">
        <h4><i class="fa fa-calendar-day fa-fw"></i> {{dateFormatterList date=myevent.date}} | <i class="fas fa-map-marker-alt fa-fw"></i> {{myevent.city}}</h4>
        <p>{{dotted myevent.description 100 }}</p>
        <a href="/events/{{myevent.id}}">Detail</a>
       
      </div>
    </div>
  {{/each}} 
</section>
