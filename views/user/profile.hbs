
<div id="profile">
    {{#if currentUser}}
    {{>userNav }}
    {{/if}}  
    
    <div class="ml-5 mr-5 px-2">
        <h1>Hi there{{#profileIsOwnedBy user=currentUser profile=user }} {{currentUser.name}}! {{else}}, I'm {{user.name}}!</h1>{{/profileIsOwnedBy}}        
        <h2> {{ pronoms user=user }}</h2>
        <h3>I'm from </h3>
        <p>{{user.city}}</p>
        <h3>About me</h3>
        <p>{{user.about}}</p>
        <h3>My interests are</h3>
        <div class="profile-interests">
        <p> 
            {{#each user.interests as |interest|}}    
                <i class="{{ interestIcon interest=interest }}" title="{{interest}}"></i>
            {{/each}}
        </p>
        </div>        
    </div>

    <div class="d-flex flex-column">
        <img src="{{user.avatar}}" alt="{{user.name}}" /> 
        {{#profileIsOwnedBy user=currentUser profile=user }}
            <a href="/user-profile/me/edit"><i class="far fa-edit"></i> edit profile</a> 
        {{else}}   
            <form method="POST" action="/user-profile/chat/{{user.id}}">
                <button type="submit"><i class="far fa-comment"></i> Chat with me!</a>
            </form>
        {{/profileIsOwnedBy}}

    </div>
</div>
