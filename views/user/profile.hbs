
<div id="profile">
    {{#if currentUser}}
    {{>userNav }}
    {{/if}}  
    
    <div>
        <h1>Hi there{{#if currentUser}} {{currentUser.name}}! {{else}}, I'm {{user.name}}!</h1>{{/if}}        
        <h2> {{ pronoms user=user }}</h2>
        <h3>I'm from </h3>
        <p>{{user.city}}</p>
        <h3>My interests are</h3>
        {{#each user.interests as |interest|}}
        <h4><i class={{ icons user=../user }}></i></h4>
       {{/each}}
        <h3>About me</h3>
        <p>{{user.about}}</p>

    </div>

    <div class="d-flex flex-column">
        <img src="{{user.avatar}}" alt="{{user.name}}" /> 
       <p> {{user._id}}</p>
       <p> {{currentUser._id}}</p>
   {{#profileIsOwnedBy user=currentUser profile=user }}
        <a href="/user-profile/me/edit"><i class="far fa-edit"></i> edit profile</a>    
    {{/profileIsOwnedBy}}

    </div>
</div>
