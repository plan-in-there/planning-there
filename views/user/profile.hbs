
<div id="profile">
     {{#if currentUser}}
    <nav class="user-nav">
        <ul>
            <li><a href="#">My plans</a></li>            
            <li><a href="/events/create">Add an event</a></li>
            <li><a href="#">Messages</a></li>
        </ul>
    </nav>  
    {{/if}}  
    
    <div>
        <h1>Hi there{{#if currentUser}} {{currentUser.name}}! {{else}}, I'm {{user.name}}!</h1>{{/if}}
        
        <h2> {{ pronoms user=user }}</h2>
        <h3>I'm from </h3>
        <p>{{user.city}}</p>
        <h3>My interests are</h3>
        {{#each interests as |interest|}}
        <h4>{{ interest }}</h4>
        {{/each}}
        <h3>About me</h3>
        <p>{{user.about}}</p>

    </div>

    <div class="d-flex flex-column">
        <img src="{{user.avatar}}" alt="{{user.name}}" />
    {{#if currentUser}}
        <a href="/user-profile/me/edit"><i class="far fa-edit"></i> edit profile</a>
    </div>
    {{/if}}
</div>
