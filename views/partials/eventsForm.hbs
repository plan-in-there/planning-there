
<div class="container">
 {{#if edit}}
    <form action="/events/{{event.id}}" method="post" enctype="multipart/form-data">
{{else}}
    <form action="/events/create" method="post" enctype="multipart/form-data">
{{/if}}

<div class="container">
<div class="row justify-content-center">
    <div class="col cl-sm-3">
            <div class="input-group mb-1">
                <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
                <input type="text" name="name" class="form-control  {{#if errors.name}} is-invalid {{/if}}"   placeholder="Write your Username" aria-label="Username" value="{{event.name}}" >
                {{#if errors.name}}<div class="invalid-feedback">{{ errors.name }}</div>{{/if}}
            </div>

            <div class="input-group mb-1">
                <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
                <input type="date" name="date" class="form-control  {{#if errors.date}} is-invalid {{/if}}"   aria-label="Date"  placeholder="Write the event's date" value="{{event.date}}">
                {{#if errors.date}}<div class="invalid-feedback">{{ errors.date }}</div>{{/if}}
            </div>

            <div class="form-floating">
                <textarea name="description" class="form-control {{#if errors.password}} is-invalid {{/if}}" placeholder="Leave a comment here" value="{{event.description}}" style="height: 100px"></textarea>
                <label for="floatingTextarea2">Type your description</label>
                {{#if errors.description}}<div class="invalid-feedback">{{ errors.description }}</div>{{/if}}
            </div>

             <div class="form-group mb-1 input-group-text">
                <select name="genreRestrictions"  aria-label="Dresscode">
                    <option selected> Select</option>
                    {{#each genreList as |genre |}}
                    <option value="{{genre}}">{{genre}}</option>
                    {{/each}}
                    
                </select>
            </div>

            <div class="form-group mb-1 input-group-text">
                <select name="category"  aria-label="Dresscode">
                    <option selected> Select category</option>
                    {{#each categoriesList as |categoriesList|}}
                    <option value="{{categoriesList}}">{{categoriesList}}</option>
                    {{/each}}
                </select>
            </div>

            <div>
              <img src="{{event.image}}" alt="{{event.image}}" />
             <input type="file" name="image" value="{{event.image}}" />
            </div>

            <div class="input-group mb-1">
                <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
                <input type="text" name="city" class="form-control  {{#if errors.city}} is-invalid {{/if}}"   aria-label="city" value="{{event.city}}" placeholder="Write your city">
                {{#if errors.city}}<div class="invalid-feedback">{{ errors.city }}</div>{{/if}}
            </div>

            <div class="input-group mb-1">
                <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
                <input type="text" name="age" class="form-control  {{#if errors.age}} is-invalid {{/if}}"   aria-label="age" value="{{event.age}}" placeholder="Write your age">
                {{#if errors.age}}<div class="invalid-feedback">{{ errors.age }}</div>{{/if}}
            </div>

            <div class="form-group mb-1 input-group-text">
                <select name="dressCode"  aria-label="Dresscode">
                    <option selected> Select the Dresscode</option>
                    {{#each dressList as |dressList|}}
                    <option value="{{dressList}}">{{dressList}}</option>
                    {{/each}}
                </select>
            </div>

            <button type="submit">Create your event!</button>
    </div>
</div>
</div>
</form>
</div>
    